{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Lyra",
    "version": "1.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": false,
        "maximize": true,
        "setFullscreen": true,
        "setMaximizable": true,
        "unmaximize": true
      },
      "shell": {
        "open": true
      },
      "dialog": {
        "all": false
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": false,
        "exists": true,
        "readDir": true,
        "readFile": true,
        "removeFile": true,
        "renameFile": true,
        "createDir": true,
        "scope": ["$DOCUMENT/**/**"],
        "writeFile": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.lyra.dev",
      "publisher": "Lyra",
      "shortDescription": "Lyra",
      "category": "Utility",
      "copyright": "Copyright (c) 2024 Lyra",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico",
        "icons/icon.png"
      ],
      "windows": {
        "allowDowngrades": true,
        "certificateThumbprint": null,
        "digestAlgorithm": null,
        "nsis": null,
        "timestampUrl": null,
        "tsp": false,
        "webviewFixedRuntimePath": null,
        "webviewInstallMode": {
          "silent": true,
          "type": "downloadBootstrapper"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "minWidth": 600,
        "minHeight": 450,
        "resizable": true,
        "title": "Lyra",
        "width": 1100,
        "height": 600,
        "decorations": true,
        "center": true,
        "focus": true,
        "visible": true
      }
    ]
  }
}
