{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "lyra",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": false,
        "maximize": true,
        "setFullscreen": true,
        "setMaximizable": true,
        "unmaximize": true
      },
      "shell": {
        "open": true
      },
      "dialog": {
        "all": false
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": false,
        "exists": true,
        "readDir": true,
        "copyFile": true,
        "readFile": true,
        "removeFile": true,
        "renameFile": true,
        "createDir": true,
        "scope": [
          "$DOCUMENT/**/**"
        ],
        "writeFile": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.lyra.dev",
      "publisher": "lyra",
      "shortDescription": "lyra",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico",
        "icons/icon.png"
      ],
      "windows": {
        "allowDowngrades": true,
        "certificateThumbprint": null,
        "digestAlgorithm": null,
        "nsis": null,
        "timestampUrl": null,
        "tsp": false,
        "webviewFixedRuntimePath": null,
        "webviewInstallMode": {
          "silent": true,
          "type": "downloadBootstrapper"
        },
        "wix": {
          "language": [
            "en-US",
            "es-ES"
          ],
          "dialogImagePath": "./target/win/dialog-win.png",
          "template": "./target/win/main.wxs",
          "bannerPath": "./target/win/banner-win.png",
          "license": "../LICENSE"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "minWidth": 600,
        "minHeight": 540,
        "resizable": true,
        "title": "lyra",
        "width": 1100,
        "height": 600,
        "decorations": true,
        "focus": true,
        "center": true,
        "visible": true
      }
    ]
  }
}